<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalculadoraPropinas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios de la app -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios de la app -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Color de fondo -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Estilo de los componentes -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="Theme.CalculadoraPropinas" parent="Base.Theme.CalculadoraPropinas" />
</resources>